<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_browse_fragment"
    android:layout_width="match_parent"
    android:background="#E8EBF0"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:deviceIds="tv"
    android:padding="10dp"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginBottom="40dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stock_title"
                android:gravity="start"
                android:textSize="25sp"
                android:fontFamily="@font/nanumgothicextrabold"
                android:layout_marginStart="10dp"
                android:textColor="#000000">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:baselineAligned="false"
            android:weightSum="6">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
            </View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/edit_stock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:drawableStart="@drawable/ic_baseline"
                    android:enabled="false"
                    android:textColor="#000000"
                    android:hint="@string/stock_hint"
                    android:textColorHint="#000000"
                    android:inputType="text">

                </EditText>
            </LinearLayout>
            <Button
                android:id="@+id/button_crypto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:enabled="false" />

            <Button
                android:id="@+id/getVoiceTextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/stock_button"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:layout_weight="1"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_marginTop="10dp"
        android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:weightSum="10"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:weightSum="8">

                    <Button
                        android:id="@+id/search_stock"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:enabled="false" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:background="@drawable/index_status_left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stock_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="3dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:text="@string/blank"/>

                    <View
                        android:id="@+id/stock_bar"
                        android:layout_width="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="match_parent"
                        android:background="#000000" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:weightSum="8">

                        <TextView
                            android:id="@+id/stock_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:layout_weight="5" />

                        <TextView
                            android:id="@+id/stock_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:layout_weight="3" />


                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="3dp"
                        android:layout_weight="1"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/index_status_left">
                    <com.github.mikephil.charting.charts.CandleStickChart
                        android:id="@+id/priceChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:weightSum="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="3"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white">

                                <TextView
                                    android:id="@+id/info_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="#000000"
                                    android:text="test"/>
                                <TextView
                                    android:id="@+id/info_text2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="#000000"
                                    android:text="test"/>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="3">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="3">

                    </LinearLayout>


                    <TableLayout
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="0,1,2,3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">
                        <TableRow
                            android:weightSum="12"
                            android:orientation="horizontal">
                            <TextView
                                android:text="@string/start_price"
                                android:gravity="start"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="2"/>
                            <TextView
                                android:id="@+id/opening_price"
                                android:gravity="end"
                                android:textColor="#000000"
                                android:layout_width="0dp"
                                android:padding="3dp"
                                android:layout_weight="3"/>
                            <TextView
                                android:text="배당률"
                                android:gravity="left"
                                android:textColor="#000000"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:padding="3dp" />
                            <TextView
                                android:id="@+id/dividend"
                                android:gravity="right"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="4"/>
                        </TableRow>

                        <TableRow
                            android:weightSum="12"
                            android:orientation="horizontal">
                            <TextView
                                android:text="고가"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="2" />
                            <TextView
                                android:id="@+id/high_price"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="3" />
                            <TextView
                                android:text="52주 신고가"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="3" />
                            <TextView
                                android:id="@+id/highest_52_price"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="4" />
                        </TableRow>
                        <TableRow
                            android:weightSum="12"
                            android:orientation="horizontal">
                            <TextView
                                android:text="저가"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="2" />
                            <TextView
                                android:id="@+id/low_price"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="3" />
                            <TextView
                                android:text="52주 신저가"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="3" />
                            <TextView
                                android:id="@+id/lowest_52_price"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="4" />
                        </TableRow>
                        <TableRow
                            android:weightSum="12"
                            android:orientation="horizontal">
                            <TextView
                                android:text="전일종가"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="2" />
                            <TextView
                                android:id="@+id/prev_price"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="3" />
                            <TextView
                                android:text="PBR"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="3" />
                            <TextView
                                android:id="@+id/pbr"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="4" />
                        </TableRow>
                        <TableRow
                            android:weightSum="12"
                            android:orientation="horizontal">
                            <TextView
                                android:text="PER"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="2"/>
                            <TextView
                                android:id="@+id/per"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="3"/>
                            <TextView
                                android:text="EPS"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="3" />
                            <TextView
                                android:id="@+id/eps"
                                android:gravity="left"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:padding="3dp"
                                android:layout_weight="4" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3"
                android:background="#000000"
                android:layout_margin="10dp"
                android:layout_weight="1">
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_margin="10dp"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:weightSum="3"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/index_status"
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:weightSum="6"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="코스피"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/kospi_index"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:layout_weight="4"/>

                        <TextView
                            android:id="@+id/kospi_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/index_status"
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:weightSum="6"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="코스닥"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/kosdaq_index"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="4"/>

                        <TextView
                            android:id="@+id/kosdaq_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:weightSum="6"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/krw_dog_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="4"/>

                        <TextView
                            android:id="@+id/krw_dog_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/index_status"
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:weightSum="6"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SnP 500"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/snp500_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="4"/>

                        <TextView
                            android:id="@+id/snp500_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/index_status"
                        android:textColor="#ffffff"
                        android:text="testing"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:weightSum="6"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nasdaq"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/Nasdaq_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="4"/>

                        <TextView
                            android:id="@+id/Nasdaq_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/index_status"
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:weightSum="6"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="다우존스"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/dow_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="4"/>

                        <TextView
                            android:id="@+id/dow_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"/>


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/index_status"
                        android:textColor="#ffffff"
                        android:text="testing"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="환율(원/달러)"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/dollar_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="4"/>

                        <TextView
                            android:id="@+id/dollar_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/index_status"
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10년물 금리"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/bond_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="4"/>

                        <TextView
                            android:id="@+id/bond_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:text="testing"
                        android:layout_weight="1"
                        android:layout_margin="4dp"/>

                </LinearLayout>
            </LinearLayout>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>